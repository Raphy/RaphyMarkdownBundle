{% block markdown_widget %}
    <textarea {{ block('widget_attributes') }}>{{ value }}</textarea>
    <link type="text/css" rel="stylesheet" href="{{ asset('bundles/raphymarkdown/css/markdown.min.css') }}">
    <script type="text/javascript" src="{{ asset('bundles/raphymarkdown/js/markdown.min.js') }}"></script>
    <script type="text/javascript">
        var simple_mde_config_{{ id }} = JSON.parse('{{ mde_config | json_encode | raw }}');
        simple_mde_config_{{ id }}.element = document.getElementById('{{ id }}');
        var simple_mde_{{ id }} = new SimpleMDE(simple_mde_config_{{ id }});
    </script>
{% endblock %}
